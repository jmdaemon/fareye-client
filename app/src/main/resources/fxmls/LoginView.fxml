<?xml version="1.0" encoding="UTF-8"?>

<?import ui.jfx.components.PassField?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="vb_login_root" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.jfx.controller.Login">
   <children>
      <MenuBar fx:id="vb_menubar">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox alignment="CENTER">
         <children>
            <VBox fx:id="vb_login" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="6.0">
               <children>
                  <ImageView fx:id="iv_avatar" fitHeight="300.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
                  <TextField fx:id="tf_pin" promptText="Pin" />
                  <HBox fx:id="hb_login_status" alignment="CENTER">
                     <children>
                        <!--<PassField fx:id="pf_pass" promptText="Password" HBox.hgrow="ALWAYS" />-->
                        <PassField fx:id="pf_pass" HBox.hgrow="ALWAYS" />
                        <Text fx:id="t_login_status" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="6.0">
                     <children>
                        <Button fx:id="btn_login" mnemonicParsing="false" text="Login" />
                        <Button fx:id="btn_signup" mnemonicParsing="false" text="Sign Up" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
